<h1>Listing tasks</h1>

<table>
  <tr>
    <th>Project</th>
    <th>Client</th>
    <th>Team</th>
    <th>Region</th>
    <th>Location</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @tasks.each do |task| %>
  <tr>
    <td><%= task.project %></td>
    <td><%= task.client %></td>
    <td><%= task.team %></td>
    <td><%= task.region %></td>
    <td><%= task.location %></td>
    <td><%= link_to 'Show', task %></td>
    <td><%= link_to 'Edit', edit_task_path(task) %></td>
    <td><%= link_to 'Destroy', task, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

